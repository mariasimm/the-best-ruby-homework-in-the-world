<p style="color: green"><%= notice %></p>

<h1>Hospitals</h1>

<%= form_tag(hospitals_path, method: :get) do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:address, "Zip Code:") %>
  <%= text_field_tag(:address) %>

  <%= label_tag(:phone, "Phone:") %>
  <%= text_field_tag(:phone) %>

  <%= label_tag(:street, "Address:") %>
  <%= text_field_tag(:street) %>

  <%= submit_tag("Search") %>
<% end %>


<div id="hospitals">
  <%= link_to "New hospital", new_hospital_path %>
  <table class="table table-striped table-hover">
    <thead class ="thead-dark">
    <tr>
      <th>#   </th>
      <th>Name   </th>
      <th>Zip Code   </th>
      <th>Phone   </th>
      <th>Address   </th>
    </tr>

    </thead>

    <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.id %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.street%></td>
        <td><%= link_to "Show this hospital", hospital %></td>
        <th cosplan="3"></th>
      </tr>
    <% end %>
    </tbody>


  </table>
  <%= paginate @hospitals %>
</div>
