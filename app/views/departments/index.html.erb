<p style="color: green"><%= notice %></p>

<h1>Departments</h1>

<%= form_tag(departments_path, method: :get) do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>

  <%= label_tag(:address, "Address:") %>
  <%= text_field_tag(:address) %>

  <%= label_tag(:phone, "Phone:") %>
  <%= text_field_tag(:phone) %>

  <%= label_tag(:hospital_id, "Hospital id:") %>
  <%= text_field_tag(:hospital_id) %>

  <%= submit_tag("Search") %>
<% end %>

<div id="departments">
  <%= link_to "New department", new_department_path %>
  <table class="table table-striped table-hover">
    <thead class ="thead-dark">
    <tr>
      <th>#   </th>
      <th>Name   </th>
      <th>Address   </th>
      <th>Phone   </th>
      <th>Hospital   </th>
    </tr>

    </thead>

    <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.id %></td>
        <td><%= department.name %></td>
        <td><%= department.address %></td>
        <td><%= department.phone %></td>
        <td><%= link_to department.hospital.name, hospital_path(department.hospital_id) %></td>
        <td><%= link_to "Show this department", department %></td>
        <th cosplan="3"></th>
      </tr>
    <% end %>
    </tbody>


  </table>
  <%= paginate @departments %>
</div>


